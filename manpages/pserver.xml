  <refnamediv>
    <refname>pserver</refname>

    <refpurpose>provide provisioning information to VOCAL processes</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis>
      <command>pserver</command>

      <arg>options</arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsect1>
    <title>Description</title>

    <para>The pserver provides provisioning data to VOCAL processes.</para>
  </refsect1>

  <refsect1>
    <title>Options</title>

    <variablelist>
      <varlistentry>
        <term>-c <filename>conf_file </filename></term>

        <listitem>
          <para>conf_file</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-n</term>

        <listitem>
          <para>do not read from config file</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-v <filename>log_level </filename></term>

        <listitem>
          <para>set verbosity</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-r <filename>psRootFileSystem </filename></term>

        <listitem>
          <para>set file system root</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-f <filename>logfile </filename></term>

        <listitem>
          <para>set log file</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-b <filename>redundant_server_host:port</filename></term>

        <listitem>
          <para>set redundant (&#34;backup&#34;) server hostname and port</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-p <filename>local port</filename></term>

        <listitem>
          <para>set port to listen for incoming requests</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-d</term>

        <listitem>
          <para>disable daemon mode (run in foreground)</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-u <filename>number of users (1000)</filename></term>

        <listitem>
          <para>number of users.</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-t <filename>number of threads (25)</filename></term>

        <listitem>
          <para>number of request proccess threads.</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-N <filename>number of bins </filename></term>

        <listitem>
          <para>number of hash bins (overrides number users).</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-M <filename>multicast_host:multicast_port</filename></term>

        <listitem>
          <para>set the multicast IP address and port</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>-s</term>

        <listitem>
          <para>log via syslog.</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsect1>

